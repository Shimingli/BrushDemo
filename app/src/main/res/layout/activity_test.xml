<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.brush.opengldemo.shiming.DrawActivity">
<!--   <com.brush.opengldemo.shiming.DrawView
       android:id="@+id/draw_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>-->
   <LinearLayout
       android:id="@+id/llt_test_top"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="right"
       >
      <Button
          android:id="@+id/btn_test_del"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="删除"
          />
      <Button
          android:id="@+id/btn_test_save"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="保存"
          />
      <Button
          android:id="@+id/btn_test_read"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="读取"
          />
   <Button
       android:id="@+id/btn_look"
       android:layout_alignParentRight="true"
       android:text="预览"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   </LinearLayout>
   <ScrollView
       android:layout_below="@id/llt_test_top"
       android:id="@+id/sv_edit_txt"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:gravity="right"
       android:orientation="vertical"
       android:layout_margin="15dp">

      <EditText
          android:id="@+id/modify_edit_text_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:background="@android:color/white"
          android:focusable="true"
          android:gravity="left|top"
          android:maxLength="1000"
          android:textSize="15sp"/>
   </ScrollView>
   <com.brush.opengldemo.shiming.DrawViewLayout
       android:id="@+id/brush_weight"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
</RelativeLayout>
